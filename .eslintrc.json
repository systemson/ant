{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "warnOnUnsupportedTypeScriptVersion": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "ignoredNodes": [
                    "PropertyDefinition"
                ]
            }
        ],
        "one-var-declaration-per-line": [
            "error",
            "initializations"
        ],
        "no-undef": 2,
        "prefer-const": 2,
        "@typescript-eslint/no-explicit-any": "off"
    }
}
