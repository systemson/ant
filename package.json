{
  "name": "micra",
  "version": "1.0.0",
  "description": "NodeJS + Redis microservices framework",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git://github.com/systemson/micra.git"
  },
  "main": "./build/server.js",
  "scripts": {
    "serve": "nodemon server.ts",
    "build": "tsc --project ./ && nexe ./build/**/* -o ./app.exe --verbose",
    "lint": "npx eslint ./server.ts ./src/**/*",
    "lint-fix": "npx eslint ./server.ts ./src/**/* --fix",
    "test": "mocha",
    "coverage": "nyc --reporter=html npm run test"
  },
  "author": "",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@mikro-orm/core": "^4.5.6",
    "@mikro-orm/postgresql": "^4.5.6",
    "@mikro-orm/reflection": "^4.5.6",
    "@types/ioredis": "^4.26.4",
    "@types/redis": "^2.8.30",
    "axios": "^0.21.1",
    "bullmq": "^1.36.1",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "i18n": "^0.13.3",
    "ioredis": "^4.27.6",
    "luxon": "^1.27.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/express": "^4.17.12",
    "@types/i18n": "^0.13.0",
    "@types/luxon": "^1.27.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.4",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "faker": "^5.5.3",
    "mocha": "^9.0.1",
    "nexe": "^4.0.0-beta.18",
    "nodemon": "^2.0.8",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "nodemonConfig": {
    "watch": [
      "server.ts",
      "src/*",
      ".env"
    ],
    "ignore": [
      "assets/*",
      "build/*",
      "logs/*",
      "temp/*"
    ],
    "verbose": true,
    "delay": 2000,
    "ext": "ts"
  }
}
