{
  "name": "@ant/ant",
  "version": "2.3.1",
  "description": "NodeJS + Redis/Kafka tiny microservices framework",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git://github.com/systemson/ant.git"
  },
  "main": "./build/server.js",
  "scripts": {
    "build": "tsc --project ./",
    "start": "npm run build && node ./build/server.js",
    "serve": "ts-node --transpile-only ./server.ts",
    "serve:dev": "nodemon server.ts",
    "compile": "npm run build && pkg ./build/server.js --config compile.json -o bin/app --options max-old-space-size=1024",
    "lint": "npx eslint ./server.ts ./src/**/*",
    "lint:fix": "npx eslint ./server.ts ./src/**/* --fix",
    "test": "mocha -r ts-node/register test/**/*spec.ts --exit --timeout 10000",
    "coverage": "nyc --reporter=html npm run test"
  },
  "author": "Deivi Pe√±a",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@ant/framework": "github:systemson/ant_framework#v2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "nodemon": "^3.0.1",
    "pg": "^8.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-http": "^4.2.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/mocha": "^8.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "eslint": "^8.42.0",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "nodemonConfig": {
    "watch": [
      "server.ts",
      "src/*",
      ".env",
      ".env.development",
      ".env.production"
    ],
    "ignore": [
      "assets/*",
      "build/*",
      "logs/*",
      "temp/*"
    ],
    "verbose": true,
    "delay": 2000,
    "ext": "ts"
  }
}
