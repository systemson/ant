{
  "name": "micra",
  "version": "1.0.0",
  "description": "NodeJS + Redis tiny microservices framework",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git://github.com/systemson/micra.git"
  },
  "main": "./build/server.js",
  "scripts": {
    "serve:dev": "SET NODE_ENV=development && nodemon server.ts",
    "serve:compile": "npm run compile && SET NODE_ENV=compiled && node ./build/server.js",
    "serve": "SET NODE_ENV=production && ts-node --transpile-only ./server.ts",
    "compile": "tsc --project ./",
    "build": "npm run compile && nexe ./build/**/* -o ./app.exe --verbose",
    "lint": "npx eslint ./server.ts ./src/**/*",
    "lint-fix": "npx eslint ./server.ts ./src/**/* --fix",
    "test": "mocha",
    "coverage": "nyc --reporter=html npm run test"
  },
  "author": "",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "axios": "^0.21.1",
    "bullmq": "^1.40.1",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "i18n": "^0.13.3",
    "ioredis": "^4.27.6",
    "moment": "^2.29.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.35"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/express": "^4.17.13",
    "@types/i18n": "^0.13.1",
    "@types/ioredis": "^4.26.6",
    "@types/luxon": "^1.27.1",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.6",
    "@types/redis": "^2.8.31",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "chai": "^4.3.4",
    "eslint": "^7.31.0",
    "faker": "^5.5.3",
    "mocha": "^8.4.0",
    "nexe": "^4.0.0-beta.18",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
    "watch": [
      "server.ts",
      "src/*",
      ".env"
    ],
    "ignore": [
      "assets/*",
      "build/*",
      "logs/*",
      "temp/*"
    ],
    "verbose": true,
    "delay": 2000,
    "ext": "ts"
  }
}
